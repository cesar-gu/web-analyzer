---
import App from '../components/App.vue';
import '../styles/global.css';
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Analizador Web — Analiza sitios con Google PageSpeed Insights</title>
    <meta
      name="description"
      content="Analiza el rendimiento, accesibilidad, SEO y buenas prácticas de cualquier sitio web usando Google PageSpeed Insights. Obtén recomendaciones accionables para mejorar tu presencia en la web."
    />
    <meta
      name="keywords"
      content="analizador web, lighthouse, rendimiento web, accesibilidad, SEO, PageSpeed Insights"
    />
    <meta property="og:title" content="Analizador Web — Analiza tu sitio" />
    <meta
      property="og:description"
      content="Analiza el rendimiento, accesibilidad y SEO de cualquier web con recomendaciones claras y accionables."
    />
    <meta property="og:type" content="website" />
    <meta name="author" content="César Gutiérrez" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://cesar-gu.github.io/web-analyzer" />
    <meta property="og:site_name" content="Analizador Web" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:image" content="/favicon.svg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Analizador Web — Analiza tu sitio" />
    <meta
      name="twitter:description"
      content="Analiza el rendimiento, accesibilidad y SEO de cualquier web con recomendaciones claras y accionables."
    />
    <meta name="twitter:image" content="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <meta name="theme-color" content="#0f172a" />
    <meta name="color-scheme" content="dark" />
    <meta
      name="google-site-verification"
      content="XnaifBXWdkpbhO3Q4HGK0R6nkIV5nM4-Yxdln5NWb9Q"
    />

    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@graph': [
          {
            '@type': 'WebSite',
            name: 'Analizador Web',
            url: 'https://cesar-gu.github.io/web-analyzer',
            description:
              'Analiza el rendimiento, accesibilidad, SEO y buenas prácticas de cualquier sitio web usando Google PageSpeed Insights.',
          },
          {
            '@type': 'Organization',
            name: 'César Gutiérrez',
            url: 'https://cesar-gu.github.io/web-analyzer',
          },
          {
            '@type': 'Person',
            name: 'César Gutiérrez',
            url: 'https://cesar-gu.github.io/web-analyzer',
            sameAs: [
              'https://github.com/cesar-gu',
              'https://www.linkedin.com/in/cesargupe/',
            ],
          },
        ],
      })}
    />
  </head>
  <body class="bg-slate-950">
    <App client:load />
  </body>
</html>
